#!/bin/bash
set -xe

sudo zypper addrepo https://download.opensuse.org/repositories/server:database/SLE_15/server:database.repo
sudo zypper --no-gpg-checks refresh
sudo zypper install -y redis
sudo zypper install -y hiredis
sudo zypper install -y libhiredis0_13
sudo service redis start
sudo redis-server > /dev/null 2>&1 &
ps aux|grep redis
set +xe
