  
#!/bin/bash
set -xe

if [[ -f /etc/os-release ]]; then
  . /etc/os-release
fi
JDK_VERSION=''
if [ ${VERSION_ID} == 16.04 ]; then  
  JDK_VERSION=8
else
  JDK_VERSION=11
fi
sudo apt update
sudo apt install -y openjdk-${JDK_VERSION}-jdk
cat << EOF > hello.java
class HelloWorld
{ 
   public static void main(String args[])
    {
       while(true){
        System.out.println("Hello, World");
        }
    }
}
EOF
javac hello.java
java -ea -Dcom.sun.management.jmxremote.port=9010 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -Djava.rmi.server.hostname=127.0.0.1 HelloWorld > /dev/null 2>&1 &
sudo ps aux|grep java
set +xe
