FROM centos:6

RUN yum update -y \
    && yum install -y \
        autoconf \
        automake \
        bison \
        epel-release \
        expect \
        flex \
        gcc \
        git \
        java-devel \
        java-1.6.0-openjdk-devel \
        libcurl-devel \
        libgcrypt-devel \
        libtool \
        make \
        mysql-devel \
        openssl-devel \
        perl-devel \
        perl-ExtUtils-Embed \
        postgresql-devel \
        python-devel \
        rpm-build \
        varnish-libs-devel \
        which \
        yajl-devel \
    && yum -y clean all
