FROM centos:7

RUN yum update -y \
 && yum install -y \
        autoconf \
        automake \
        bison \
        epel-release \
        expect \
        flex \
        gcc \
        git \
        hiredis-devel \
        java-devel \
        java-1.7.0-openjdk-devel \
        libcurl-devel \
        libgcrypt-devel \
        libtool \
        libtool-ltdl-devel \
        make \
        mysql-devel \
        openssl-devel \
        perl-devel \
        perl-ExtUtils-Embed \
        pkg-config \
        postgresql-devel \
        python-devel \
        rpm-build \
        rpm-sign \
        varnish-libs-devel \
        which \
        yajl-devel \
 && yum -y clean all
